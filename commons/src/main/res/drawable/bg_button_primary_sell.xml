<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <ripple android:color="@color/black">
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/red_darker" android:startColor="@color/red" />
                    <stroke android:width="@dimen/smaller_stroke" android:color="@color/red_darkest" />
                    <corners android:radius="@dimen/smaller_radius" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_pressed="true">
        <ripple android:color="@color/black">
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/red" android:startColor="@color/red_lightest" />
                    <stroke android:width="@dimen/smaller_stroke" android:color="@color/red_dark" />
                    <corners android:radius="@dimen/smaller_radius" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_2" />
            <corners android:radius="@dimen/smaller_radius" />
        </shape>
    </item>

</selector>