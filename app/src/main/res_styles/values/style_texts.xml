<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Acme.Text" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Acme.Text.Font" />

    <style name="Acme.Text.Font.Smaller">
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="Acme.Text.Font.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Acme.Text.Font.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Acme.Text.Font.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Acme.Text.Font.Bigger">
        <item name="android:textSize">@dimen/text_size_bigger</item>
    </style>

    <style name="Acme.Text.Display">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Acme.Text.Display.Smaller">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Acme.Text.Display.Medium">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Acme.Text.Display.Bigger">
        <item name="android:textSize">45sp</item>
    </style>

</resources>